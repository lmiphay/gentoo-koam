#!/usr/bin/python

import sys
import os
import koam

if __name__ == "__main__":
    if len(sys.argv) < 2:
        sys.exit("usage: " + os.path.basename(sys.argv[0]) + " <server0>...<serverN>")
    else:
        app = koam.KoamApplication(sys.argv)

        for server in sys.argv[1:]:
            koam.KoamObserver.add_server(server)

        sys.exit(app.run())
